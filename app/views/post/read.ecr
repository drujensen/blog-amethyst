<% mypost = post %>
<% if mypost %>
  <h2 class="blog-post-title"><%= mypost.name %></h2>
  <p class="blog-post-meta"><%= mypost.last_updated %> by <a href="https://github.com/drujensen" target="_blank">Dru Jensen</a></p>
  <p><%= mypost.markdown_body %></p>
<% else %>
  <h1>No Record Found</h1>
<% end %>
<a href="/posts">Back</a>
