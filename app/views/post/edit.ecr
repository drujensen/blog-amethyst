<h1>Edit Post</h1>

<% mypost = post %>
<% if mypost %>
  <form action="/posts/<%= mypost.id %>/update" method="post">
    <input type="text" name="name" style="width:100%" placeholder="Name" value="<%= mypost.name %>"/><br/>
    <textarea name="body" rows="10" style="width:100%"><%= mypost.body %></textarea><br/>
    <input type="submit"/>
  </form>
<% else %>
<h1>Post not found</h1>
<% end %>
<a href="/posts">Back</a>
